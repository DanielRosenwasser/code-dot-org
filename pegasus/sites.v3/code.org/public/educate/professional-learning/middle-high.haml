---
title: Professional Learning Program Details
theme: responsive_full_width
---

-# Use this DCDO flag to show the off-season version of the page
- off_season_version = !!DCDO.get('pl-teacher-application', false)

%link{href: "/css/generated/design-system-pegasus.css", rel: "stylesheet"}
%link{href: "/css/generated/pl-middle-high-styles.css", rel: "stylesheet"}

= view :analytics_event_log_helper, event_name: AnalyticsConstants::MIDDLE_AND_HIGH_SCHOOL_PL_PAGE_VISITED_EVENT

%section.top
  .wrapper
    %h1{style: "margin-bottom: 3rem"}
      =hoc_s(:pl_middle_high_top_heading)
    .text-wrapper.col-50
      %p.body-one
        =hoc_s(:pl_middle_high_top_desc)
      %p
        %strong=hoc_s(:pl_middle_high_top_desc_02)
      %ul
        %li=hoc_s(:pl_middle_high_top_list_01)
        %li=hoc_s(:pl_middle_high_top_list_02)
        %li=hoc_s(:pl_middle_high_top_list_03)
      %a.link-button{href: "/educate/professional-learning/program-information"}
        =hoc_s(:call_to_action_apply_now)
    .video-wrapper.col-50
      %figure.video-responsive{style: "margin-top: 5px; max-width: unset"}
        %div
          %iframe{src: "https://www.youtube-nocookie.com/embed/dScOdk0yY38", title: "YouTube video player", allowfullscreen: "true", frameborder: "0"}
    .clear

%section.bg-neutral-light
  .wrapper
    .quotes-wrapper
      %figure.col-33{style: "margin-top: 10px;"}
        %img{src: "/images/professional-learning/pl-carousel.png", alt: ""}
      %div.col-60{style: "float: right"}
        %h2.heading-lg.no-margin-bottom
          =hoc_s(:pl_middle_high_quotes_heading)
        = view :pl_middle_high_carousel
  .clear

%section
  .wrapper
    %h2=hoc_s(:pl_middle_high_programs_heading)
    %p
      =hoc_s(:pl_middle_high_programs_desc, markdown: :inline, locals:{csd_url: "/csd", csp_url: "/csp", csa_url: "/csa"})
    = view :pl_middle_high_programs
  .clear

= view :section_divider_line

%section
  .wrapper
    %h2=hoc_s(:heading_program_design)
    %p=hoc_s(:pl_middle_high_program_design_desc)
    %ul.progressive-list.three-col
      %li
        %span
        %h3=hoc_s(:pl_middle_high_program_design_summer_title)
        %p=hoc_s(:pl_middle_high_program_design_summer_desc)
      %li
        %span
        %h3=hoc_s(:pl_middle_high_program_design_year_title)
        %p=hoc_s(:pl_middle_high_program_design_year_desc)
      %li
        %span
        %h3=hoc_s(:pl_middle_high_program_design_community_title)
        %p=hoc_s(:pl_middle_high_program_design_community_desc)

%section.bg-neutral-light
  .wrapper
    %h2.centered
      =hoc_s(:heading_how_does_application_process_work)
    %ol.steps-list.three-col
      %li
        %h3
          %span 1
        %h4=hoc_s(:heading_apply)
        %p=hoc_s(:pl_middle_high_process_apply_desc)
      %li
        %h3
          %span 2
        %h4=hoc_s(:heading_acceptance)
        %p=hoc_s(:pl_middle_high_process_acceptance_desc)
      %li
        %h3
          %span 3
        %h4=hoc_s(:heading_enroll)
        %p=hoc_s(:pl_middle_high_process_enroll_desc)
    %div.centered
      %a.link-button{href: "/educate/professional-learning/program-information"}
        =hoc_s(:call_to_action_apply_now)

- if off_season_version
  %section
    .wrapper
      ADD FORM HERE

%section
  .wrapper
    %h2=hoc_s(:pl_middle_high_additional_programs_heading)
    %p=hoc_s(:pl_middle_high_additional_programs_desc)
    .action-block__wrapper.action-block__wrapper--three-col
      .action-block.action-block--one-col.secondary.flex-space-between
        .content-wrapper
          %h3=hoc_s(:pl_self_paced_learning_heading)
          %p=hoc_s(:pl_self_paced_learning_desc)
        .content-footer
          %a.link-button.secondary{href: "/educate/professional-development-online"}
            =hoc_s(:call_to_action_explore_self_paced_learning)
      .action-block.action-block--one-col.secondary.flex-space-between
        .content-wrapper
          %h3=hoc_s(:pl_elementary_workshops_heading)
          %p=hoc_s(:pl_elementary_workshops_desc)
        .content-footer
          %a.link-button.secondary{href: "/professional-development-workshops"}
            =hoc_s(:call_to_action_explore_k_5_workshops)
      .action-block.action-block--one-col.secondary.flex-space-between
        .content-wrapper
          %h3=hoc_s(:pl_outside_us_heading)
          %p=hoc_s(:pl_outside_us_desc)
        .content-footer
          %a.link-button.secondary.has-external-link{href: "https://support.code.org/hc/en-us/articles/115003865532-I-teach-outside-of-the-US-Are-there-resources-to-help-me-teach-computer-science-", target: "_blank", rel: "noopener noreferrer"}
            =hoc_s(:call_to_action_for_intl_educators)

= view :section_divider_line

%section
  .wrapper
    %h2=hoc_s(:heading_have_questions)
    .action-block.action-block--two-col
      .text-wrapper.col-50
        %p=hoc_s(:pl_regional_partner_desc)
        = view :professional_development_workshops_regional_partner_search
        %a.link-button.secondary.has-external-link{href: "https://support.code.org/", target: "_blank", rel: "noopener noreferrer"}
          =hoc_s(:call_to_action_visit_support_center)
      %img.col-50{src: "/images/professional-learning/pl-teachers-talking.png", alt: "", style: "height: max-content;"}
  .clear
